<% unless controller.action_name == 'new' %>
    <%= link_to image_tag( 'Logo'), root_path, class: 'logo' %>

    
    
    <div class="nav-user-actions">
        <% unless current_user.nil? %>
            <%= link_to  "Profile", current_user, class: 'profile-btn' %>
            <%= link_to  "Logout", logout_path, method: :delete%> 
        <% end %>
        <% unless logged_in? %>
            <%= link_to  "Login", login_path, class: 'nav-login-btn' %>
            <%= link_to  "Sign up", signup_path, class: 'nav-signup-btn' %>
        <% end %>
    </div>
<% end %>
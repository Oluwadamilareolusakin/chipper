<% provide(:button_text, 'Reset your password') %>
<div class="form-container column">
    <h1 class=" center-aligned-text form-header-text">Enter your new password</h1>
    <div class="user-admin-data-form row">
        <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
            <%= hidden_field_tag :email, @user.email %>
            <p><%= f.password_field :password %></p>
            <h5>Password must contain a lowercase, uppercase and any special character</h6>
            <div class="actions">
                <p><%= f.submit yield(:button_text) %></p>
            </div>
        <% end %>
    </div>
</div>
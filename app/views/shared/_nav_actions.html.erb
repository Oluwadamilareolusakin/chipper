<% unless current_user.nil? %>
    <p><%= link_to  "Chip in", chip_path, class: 'chip-in' %></p>
    <% unless controller.controller_name == 'users' && controller.action_name == 'show' %>
        <p><%= link_to  "Profile", current_user, class: 'profile-btn' %></p>
    <% end %>
    <p><%= link_to  "Logout", logout_path, class: 'logout-btn', method: :delete  %> </p>
<% end %>